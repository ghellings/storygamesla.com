---
eleventyExludeFromCollections: true
pagination:
    data: authors.authors
    size: 1
    alias: authors.authors
permalink: /author-pages/{{ authors.authors.author.name | lower | slugify }}/
layout: layout.njk
title: Author-Pages
eleventyImport:
    collections: ["game"]
description: Authors of TTRPGs
---
{%- set name = authors.authors.author.name  -%}
<h2>{{ name | replace(".", " ") | capitalize  }}</h2>
<h3>Games</h3>
<ul>
{% for g in collections.game | sort(false, false, "collections.game.data.title" )  %}
    {% if name in g.data.gameauthors %}
    <li><a href="/games/{{g.data.title | slugify }}">{{ g.data.title }}</a></li>
    {% endif %}
{% endfor %}
</ul>
<hr>
<p>{{ authors.authors.author.bio | renderContent("md") | safe }}</p>